@model IEnumerable<AppUser>

<h2>Company Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Name</th>
            <th>Surname</th>
            <th>Phone Number</th>
            <th>Date of Birth</th>
            <th>City</th>
            <th>Country</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.Surname</td>
                <td>@user.PhoneNumber</td>
                <td>@user.DateOfBirth.ToShortDateString()</td>
                <td>@user.City</td>
                <td>@user.Country</td>
                <td>@(user.IsApproved ? "Approved" : "Pending")</td>
                <td>
                    @if (!user.IsApproved)
                    {
                        <form asp-action="Approve" asp-route-userId="@user.Id" method="post">
                            <button type="submit" class="btn btn-primary">Approve</button>
                        </form>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>