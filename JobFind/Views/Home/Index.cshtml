@model HomePageViewModel
<main>

    <!-- slider Area Start-->
    <div class="slider-area ">
        <!-- Mobile Menu -->
        <div class="slider-active">
            <div class="single-slider slider-height d-flex align-items-center" data-background="assets/img/hero/h1_hero.jpg">
                <div class="container">
                    <div class="row">
                        <div class="col-xl-6 col-lg-9 col-md-10">
                            <div class="hero__caption">
                                <h1>Find the most exciting startup jobs</h1>
                            </div>
                        </div>
                    </div>
                    <!-- Search Box -->
                    <div class="row">
                        <div class="col-xl-8">
                            <!-- form -->
                            <!-- Ana Sayfa (Home/Index.cshtml) -->

                            <form asp-controller="Job" asp-action="Index" method="get" class="search-box">
                                <div class="input-form">
                                    <input type="text" name="searchString" placeholder="Job Title or keyword" value="@ViewData["searchString"]" />
                                </div>
                                <div class="select-form">
                                    <!-- Optionally, you can include a select dropdown for additional filtering -->
                                    <!-- Example: Location dropdown -->
                                    <div class="select-itms">
                                        <select name="location">
                                            <option value="">Location AZE</option>
                                            <!-- Add more options as needed -->
                                        </select>
                                    </div>
                                </div>
                                <div class="search-form">
                                    <button type="submit" class="btn">Find job</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- slider Area End-->
    <!-- Our Services Start -->
    <div class="our-services section-pad-t30">
        <div class="container">
            <!-- Section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle text-center">
                        <span>FEATURED TOURS Packages</span>
                        <h2>Browse Top Categories </h2>
                    </div>
                </div>
            </div>
            <div class="container">
                @for (int i = 0; i < Model.getCategoryVMs.Count(); i += 4)
                {
                    if (i < 8) 
                    {
                        <div class="row mb-4">
                            @for (int j = 0; j < 4; j++)
                            {
                                var index = i + j;
                                if (index < Model.getCategoryVMs.Count() && index < 8)
                                {
                                    var item = Model.getCategoryVMs.ElementAt(index);
                                    <div class="col-xl-3 col-lg-3 col-md-4 col-sm-6">
                                        <div class="single-services text-center mb-30">
                                            <div class="img-container">
                                                <img src="~/category/@item.Icon" style="width: 100px; height: 100px;" alt="icon" class="img-fluid" />
                                            </div>
                                            <div class="services-cap">
                                                <h5 class="truncate">
                                                   
                                                    <a asp-controller="Job" asp-action="Index" asp-route-categoryId="@item.Id">@item.Name</a>
                                                </h5>
                                                <span>@item.JobCount</span>
                                            </div>
                                        </div>
                                    </div>
                                }
                            }
                        </div>
                    }
                }
            </div>

            <!-- More Btn -->
            <!-- Section Button -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="browse-btn2 text-center mt-50">
                        <a href="job_listing.html" class="border-btn2">Browse All Sectors</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Our Services End -->
    <!-- Online CV Area Start -->
    <div class="online-cv cv-bg section-overly pt-90 pb-120" data-background="assets/img/gallery/cv_bg.jpg">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-xl-10">
                    <div class="cv-caption text-center">
                        <p class="pera1">FEATURED TOURS Packages</p>
                        <p class="pera2"> Make a Difference with Your Online Resume!</p>
                        <a asp-action="Create" asp-controller="CV" class="border-btn2 border-btn4">Create your CV</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Online CV Area End-->
    <!-- Featured_job_start -->
    <section class="featured-job-area feature-padding">
        <div class="container">
            <!-- Section Tittle -->
            <div class="row">
                <div class="col-lg-12">
                    <div class="section-tittle text-center">
                        <span>Recent Job</span>
                        <h2>Featured Jobs</h2>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-xl-10">
                    <!-- single-job-content -->
                    @foreach (var item in Model.getUserJobVMs.Skip(1).Take(5))
                    {

                        <div class="single-job-items mb-30">
                            <div class="job-items">
                                <div class="company-img">
                                    <a asp-action="Details" asp-controller="JobDetail" asp-route-id="@item.Id"><img src="~/jobImages/@item.ImageUrl" style="width: 100px; height: 100px;" alt="Image"></a>
                                </div>
                                <div class="job-tittle">
                                    <a asp-action="Details" asp-controller="JobDetail" asp-route-id="@item.Id"><h4>@item.Name</h4></a>
                                    <ul>
                                        <li>@item.CompanyName</li>
                                        <li><i class="fas fa-map-marker-alt"></i>@item.City</li>
                                        <li>@item.Salary</li>
                                    </ul>
                                </div>
                            </div>
                            <div class="items-link f-right">
                                <a asp-action="Details" asp-controller="JobDetail" asp-route-id="@item.Id">@item.NatureName</a>
                                <span>@item.PostedDate</span>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </section>
    <!-- Featured_job_end -->
